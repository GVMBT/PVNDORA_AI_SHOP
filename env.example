# ============================================================
# PVNDORA Environment Variables
# Copy this file to .env and fill in the values
# ============================================================

# Telegram Bots
# PVNDORA Main Bot
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://pvndora.app/webhook/telegram
WEBAPP_URL=https://pvndora.app

# Discount Bot (optional)
DISCOUNT_BOT_TOKEN=your_discount_bot_token

# Admin Bot (for broadcasts and admin functions)
ADMIN_BOT_TOKEN=your_admin_bot_token

# Required channel for PVNDORA bot (users must subscribe)
PVNDORA_REQUIRED_CHANNEL=@pvndora_news

# Supabase (PostgreSQL)
SUPABASE_URL=https://cxthsmadbvgrzjgnuzke.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
# Optional: Direct DB connection for vecs/pgvector
SUPABASE_DB_URL=postgresql://postgres:[PASSWORD]@db.cxthsmadbvgrzjgnuzke.supabase.co:5432/postgres

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# Upstash QStash (Message Queue)
QSTASH_URL=https://qstash.upstash.io
QSTASH_TOKEN=your_qstash_token
QSTASH_CURRENT_SIGNING_KEY=your_signing_key
QSTASH_NEXT_SIGNING_KEY=your_next_signing_key

# Upstash Redis (REST API - required names for upstash-redis SDK)
UPSTASH_REDIS_REST_URL=https://grown-husky-42729.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token
# Full Redis URL (for compatibility)
REDIS_URL=rediss://default:YOUR_TOKEN@grown-husky-42729.upstash.io:6379

# Payment Providers
# CrystalPay (docs.crystalpay.io)
# LOGIN = Логин кассы (виден в ЛК CrystalPay @CrystalPAY_bot)
CRYSTALPAY_LOGIN=your_login
# SECRET = Секретный ключ кассы
CRYSTALPAY_SECRET=your_secret
# SALT = Salt для валидации подписи webhook
CRYSTALPAY_SALT=your_salt
# Base URL для API запросов
CRYSTALPAY_API_URL=https://api.crystalpay.io/v3
# Test mode (true/false) - для тестовых платежей
CRYSTALPAY_TEST_MODE=false

# Default payment gateway
DEFAULT_PAYMENT_GATEWAY=crystalpay

# Webapp URL (for deployment)
WEBAPP_URL=your-project.vercel.app

# Cron Jobs Security
CRON_SECRET=your_random_cron_secret

# Optional: Development
BASE_URL=http://localhost:8000
DEBUG=false

