# ============================================================
# PVNDORA Environment Variables
# Copy this file to .env and fill in the values
# ============================================================

# Telegram Bot
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.vercel.app/api/webhook

# Supabase (PostgreSQL)
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
# Optional: Direct DB connection for vecs/pgvector
SUPABASE_DB_URL=postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# Upstash QStash (Message Queue)
QSTASH_URL=https://qstash.upstash.io
QSTASH_TOKEN=your_qstash_token
QSTASH_CURRENT_SIGNING_KEY=your_signing_key
QSTASH_NEXT_SIGNING_KEY=your_next_signing_key

# Upstash Redis
UPSTASH_REDIS_URL=https://xxx.upstash.io
UPSTASH_REDIS_TOKEN=your_redis_token

# Payment Providers
# AAIO
AAIO_MERCHANT_ID=your_merchant_id
AAIO_SECRET_KEY=your_secret_key

# YooKassa (Ð®Kassa)
YUKASSA_SHOP_ID=your_shop_id
YUKASSA_SECRET_KEY=your_secret_key

# Vercel (for deployment)
VERCEL_URL=your-project.vercel.app

# Optional: Development
BASE_URL=http://localhost:8000
DEBUG=false

