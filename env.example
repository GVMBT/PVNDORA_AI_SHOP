# ============================================================
# PVNDORA Environment Variables
# Copy this file to .env and fill in the values
# ============================================================

# Telegram Bot
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://pvndora.app/webhook/telegram
WEBAPP_URL=https://pvndora.app

# Supabase (PostgreSQL)
SUPABASE_URL=https://cxthsmadbvgrzjgnuzke.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
# Optional: Direct DB connection for vecs/pgvector
SUPABASE_DB_URL=postgresql://postgres:[PASSWORD]@db.cxthsmadbvgrzjgnuzke.supabase.co:5432/postgres

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# Upstash QStash (Message Queue)
QSTASH_URL=https://qstash.upstash.io
QSTASH_TOKEN=your_qstash_token
QSTASH_CURRENT_SIGNING_KEY=your_signing_key
QSTASH_NEXT_SIGNING_KEY=your_next_signing_key

# Upstash Redis (REST API - required names for upstash-redis SDK)
UPSTASH_REDIS_REST_URL=https://grown-husky-42729.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token
# Full Redis URL (for compatibility)
REDIS_URL=rediss://default:YOUR_TOKEN@grown-husky-42729.upstash.io:6379

# Payment Providers
# 1Plat (Russia/CIS)
# x-shop = ID магазина (видно рядом с названием магазина в ЛК, например #1182)
ONEPLAT_SHOP_ID=1182
# x-secret = Секретный ключ (в настройках магазина в ЛК)
ONEPLAT_SECRET_KEY=your_1plat_secret_key
# Base URL для API запросов
ONEPLAT_API_URL=https://1plat.cash
# Для обратной совместимости (deprecated, используйте ONEPLAT_SHOP_ID)
ONEPLAT_MERCHANT_ID=1182
ONEPLAT_API_KEY=

# Freekassa (Russia/CIS)
# MERCHANT_ID = ID магазина (видно в личном кабинете Freekassa)
FREEKASSA_MERCHANT_ID=your_merchant_id
# SECRET_WORD_1 = Первое секретное слово (для формирования подписи платежа)
FREEKASSA_SECRET_WORD_1=your_secret_word_1
# SECRET_WORD_2 = Второе секретное слово (для проверки webhook)
FREEKASSA_SECRET_WORD_2=your_secret_word_2
# Base URL для API запросов
FREEKASSA_API_URL=https://pay.freekassa.ru

# Rukassa (Russia/CIS) - lk.rukassa.io
# SHOP_ID = ID магазина (видно в личном кабинете lk.rukassa.io)
RUKASSA_SHOP_ID=your_shop_id
# TOKEN = API токен (в настройках магазина)
RUKASSA_TOKEN=your_token
# Base URL для API запросов
RUKASSA_API_URL=https://lk.rukassa.io/api/v1
# H2H режим - показывать свою форму с реквизитами (true/false)
RUKASSA_H2H_MODE=false
# Отключенные методы (через запятую: sbp_qr,clever) - смотри статусы в ЛК Rukassa
RUKASSA_DISABLED_METHODS=sbp_qr

# CrystalPay (docs.crystalpay.io)
# LOGIN = Логин кассы (виден в ЛК CrystalPay @CrystalPAY_bot)
CRYSTALPAY_LOGIN=your_login
# SECRET = Секретный ключ кассы
CRYSTALPAY_SECRET=your_secret
# SALT = Salt для валидации подписи webhook
CRYSTALPAY_SALT=your_salt
# Base URL для API запросов
CRYSTALPAY_API_URL=https://api.crystalpay.io/v3

# Default payment gateway (rukassa, crystalpay, 1plat, freekassa)
DEFAULT_PAYMENT_GATEWAY=rukassa

# Webapp URL (for deployment)
WEBAPP_URL=your-project.vercel.app

# Cron Jobs Security
CRON_SECRET=your_random_cron_secret

# Optional: Development
BASE_URL=http://localhost:8000
DEBUG=false

