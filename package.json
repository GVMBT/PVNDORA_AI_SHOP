{
    "name": "ai-shop-platform",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:analyze": "vite build && echo Bundle analysis saved to dist/stats.html",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write .",
        "format:check": "biome check .",
        "typecheck": "tsc --noEmit",
        "typecheck:strict": "tsc --noEmit --project tsconfig.strict.json",
        "preview": "vite preview",
        "check:all": "biome check . && npm run typecheck",
        "sonar": "sonar-scanner",
        "sonar:check": "python scripts/run_sonarqube.py",
        "quality:check": "python scripts/check_quality.py",
        "quality:fix": "python scripts/fix_auto_fixable.py",
        "quality:all": "npm run quality:fix && npm run quality:check"
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.2.4",
        "@resvg/resvg-js": "^2.6.2",
        "@tanstack/react-virtual": "^3.13.13",
        "@telegram-apps/sdk": "^3.11.8",
        "clsx": "^2.1.1",
        "framer-motion": "^12.23.26",
        "lucide-react": "^0.559.0",
        "react": "^19.2.1",
        "react-dom": "^19.2.1",
        "react-qr-code": "^2.0.18",
        "satori": "^0.12.0",
        "tailwind-merge": "^3.4.0",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.11",
        "@types/node": "^22.14.0",
        "@types/react": "^19.1.6",
        "@types/react-dom": "^19.1.5",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.18",
        "postcss": "^8.4.35",
        "rollup-plugin-visualizer": "^6.0.5",
        "tailwindcss": "^3.4.1",
        "typescript": "~5.8.2",
        "vite": "^5.1.6"
    },
    "overrides": {
        "valibot@<=1.2.0": "1.2.0"
    }
}