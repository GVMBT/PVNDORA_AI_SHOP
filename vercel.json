{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/og/:path*", "destination": "/api/og/:path*" },
    { "source": "/api/og/:path*", "destination": "/api/og/:path*" },
    { "source": "/api/cron/:path*", "destination": "/api/cron/:path*" },
    { "source": "/api/workers/:path*", "destination": "/api/index.py" },
    { "source": "/api/((?!og/|cron/).*)", "destination": "/api/index.py" },
    { "source": "/webhook/telegram", "destination": "/api/index.py" },
    { "source": "/webhook/discount", "destination": "/api/index.py" },
    { "source": "/webhook/(.*)", "destination": "/api/index.py" },
    { "source": "/f7f45338-a334-44be-84d7-d15c3770bc97.txt", "destination": "/f7f45338-a334-44be-84d7-d15c3770bc97.txt" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 300
    },
    "api/og/referral.js": {
      "maxDuration": 30
    },
    "api/cron/*.py": {
      "maxDuration": 60
    },
    "api/workers/*.py": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/expire_orders",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/auto_alloc",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/daily_cleanup",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/update_exchange_rates",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/refund_expired_prepaid",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/reengagement",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/low_stock_alert",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/discount_offers",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/check_pending_payments",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/deliver_overdue_discount",
      "schedule": "*/5 * * * *"
    }
  ]
}
