{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/webhook/(.*)", "destination": "/api/index.py" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/crons/check-expired-subs",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/crons/check-inactive-users",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/crons/check-fulfillment-timeout",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/crons/check-wishlist-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/crons/request-reviews",
      "schedule": "30 * * * *"
    },
    {
      "path": "/api/crons/send-personalized-offers",
      "schedule": "0 12 * * *"
    }
  ]
}
